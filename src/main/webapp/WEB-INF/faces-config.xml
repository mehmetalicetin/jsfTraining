<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
              version="2.1">
    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        <el-resolver>com.cetin.education.spring.primefaces.masterjsf.chapterone.ATPVarResolver</el-resolver>
        <locale-config>
            <default-locale>en_US</default-locale>
        </locale-config>
        <resource-bundle>
            <base-name>locale.PlayerMessages</base-name>
            <var>msg</var>
        </resource-bundle>
        <message-bundle>locale.PlayerMessages</message-bundle>
        <action-listener>com.cetin.education.spring.primefaces.masterjsf.chapterfour.actionlistener.ApplicationPlayerListener</action-listener>
    <system-event-listener>
        <system-event-listener-class>com.cetin.education.spring.primefaces.masterjsf.chapterfour.eventlistener.InputValidationListener</system-event-listener-class>
        <system-event-class>javax.faces.event.PostValidateEvent</system-event-class>
        <source-class>javax.faces.component.html.HtmlInputText</source-class>
    </system-event-listener>
    </application>
    <lifecycle>
        <phase-listener>org.springframework.web.jsf.DelegatingPhaseListenerMulticaster</phase-listener>
    </lifecycle>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{playersBean.initViewAction()}</from-action>
            <from-outcome>start</from-outcome>
            <to-view-id>/rafa.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/rafa.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{dashboardView.playerDone}</from-action>
            <from-outcome>done</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/dashbord.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>done</from-outcome>
            <if>#{loginBean.render}</if>
            <to-view-id>/success.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>done</from-outcome>
            <if>#{!loginBean.render}</if>
            <to-view-id>/failed.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/rafa.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>done</from-outcome>
            <to-view-id>#{loginBean.navigateHelper()}</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <validator>
        <validator-id>validator</validator-id>
        <validator-class>com.cetin.education.spring.primefaces.masterjsf.chapterfour.validator.EmailValidator</validator-class>
    </validator>
</faces-config>
